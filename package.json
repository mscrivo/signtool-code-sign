{
	"name": "@mscrivo/windows-codesign-signtool",
	"version": "1.3.0",
	"private": false,
	"description": "Sign files with signtool.exe",
	"main": "lib/main.js",
	"scripts": {
		"build": "tsc",
		"format": "prettier --write **/*.ts",
		"format-check": "prettier --check **/*.ts",
		"lint": "eslint src/**/*.ts",
		"lint-fix": "eslint src/**/*.ts --fix",
		"package": "esbuild lib/main.js --bundle --platform=node --target=node20 --outfile=dist/index.js --sourcemap --legal-comments=linked",
		"test": "jest",
		"all": "npm run build && npm run format && npm run lint && npm run package && npm test"
	},
	"repository": {
		"url": "git+https://github.com/mscrivo/signtool-code-sign.git"
	},
	"publishConfig": {
		"registry": "https://npm.pkg.github.com"
	},
	"keywords": [
		"actions",
		"node",
		"setup",
		"signtool",
		"windows",
		"code-sign",
		"publish"
	],
	"author": "Michael Scrivo",
	"license": "MIT",
	"dependencies": {
		"@actions/core": "^3.0.0"
	},
	"devDependencies": {
		"@eslint/eslintrc": "^3.3.3",
		"@eslint/js": "^9.39.1",
		"@types/jest": "^30.0.0",
		"@types/node": "^25.2.1",
		"@typescript-eslint/parser": "^8.55.0",
		"esbuild": "^0.27.3",
		"eslint": "^10.0.1",
		"eslint-plugin-github": "^6.0.0",
		"eslint-plugin-jest": "^29.0.1",
		"jest": "^30.2.0",
		"jest-circus": "^30.2.0",
		"js-yaml": "^4.1.1",
		"prettier": "^3.6.2",
		"ts-jest": "^29.4.5",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.53.0"
	}
}
