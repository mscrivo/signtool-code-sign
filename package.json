{
  "name": "windows-codesign-signtool",
  "version": "1.1.0",
  "private": false,
  "description": "Sign files with signtool.exe",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "repository": {
    "url": "https://github.com/mscrivo/signtool-code-sign"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },  
  "keywords": [
    "actions",
    "node",
    "setup",
    "signtool",
    "windows",
    "code-sign",
    "publish"
  ],
  "author": "Gabriel Acosta",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.11.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.9.0",
    "@typescript-eslint/parser": "^8.14.0",
    "@vercel/ncc": "^0.38.3",
    "eslint": "^8.14.0",
    "eslint-plugin-github": "^5.0.2",
    "eslint-plugin-jest": "^28.9.0",
    "jest": "^29.7.0",
    "jest-circus": "^29.7.0",
    "js-yaml": "^4.1.0",
    "prettier": "3.3.3",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.3",
    "typescript-eslint": "8.14.0"
  }
}
